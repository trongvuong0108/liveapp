<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:autoPlay="true"
        app:layout_constraintTop_toTopOf="parent"
        app:videoId="TjGa4n9QL64"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_sanpham"
        android:orientation="horizontal"
        android:weightSum="5"
        android:elevation="15dp"
        >
        <ImageView
            android:id="@+id/img_sanpham"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:padding="5dp"
            android:src="@drawable/cua"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ten_sanpham"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Chưa có sản phẩm"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="0dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/mota_sanpham"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:text="Chưa có sản phẩm"
                    android:textStyle="bold"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/gia_sanpham"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="$400"
                    android:background="@drawable/back_gia"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Số lượng" />

        <TextView
            android:id="@+id/text_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="TextView" />
    </LinearLayout>

    <Button
        android:id="@+id/button_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Chưa có sản phẩm" />
</LinearLayout>